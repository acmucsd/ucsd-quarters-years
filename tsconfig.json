  {
  "compilerOptions": {
    "target": "esnext",
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./",
    "declaration": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "inlineSourceMap": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
